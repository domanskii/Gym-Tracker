@model IEnumerable<GymTracker.Models.Userr>

<h1>Dane</h1>
<a href="@Url.Action("Create", "Userrs")" class="btn btn-primary mb-3">Utwórz profil</a>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>FirstName</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Height</th>
            <th>Weight</th>
            <th>Registration Date</th>
            <th>Last Login Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Age</td>
                <td>@user.Gender</td>
                <td>@user.Height</td>
                <td>@user.Weight</td>
                <td>@user.RegistrationDate?.ToString("yyyy-MM-dd")</td>
                <td>@user.LastLoginDate?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("Edit", "Userrs", new { id = user.Id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "Userrs", new { id = user.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
