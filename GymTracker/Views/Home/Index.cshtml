@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/site.css">

<div class="text-center">
    <h1 class="display-4 text-stroked">GymTracker</h1>
    <span class="text-stroked" style="color: white; font-weight: bold;">Twój partner w treningu i progresie</span>
</div>

<div class="container d-flex justify-content-center align-items-center flex-column mt-5">
    <div class="row w-100 justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="d-flex flex-column align-items-center border p-3 h-100">
                <img src="~/lato.jpg" class="img-fluid" style="max-height: 150px; object-fit: contain;" alt="Forma na lato">
                <div class="text-center mt-2 flex-grow-1 d-flex flex-column">
                    <h3 class="font-weight-bold">Forma na lato</h3>
                    <p class="text-left flex-grow-1">Oszałamiający program treningowy, by uzyskać najlepszą formę przed nadchodzącym sezonem!</p>
                    <a href="@Url.Action("Szczegoly1", "Home")" class="btn btn-lavender mt-auto">Sprawdź szczegóły</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="d-flex flex-column align-items-center border p-3 h-100">
                <img src="~/personal.jpg" class="img-fluid" style="max-height: 150px; object-fit: contain;" alt="Trening personalny">
                <div class="text-center mt-2 flex-grow-1 d-flex flex-column">
                    <h3 class="font-weight-bold">Trening personalny</h3>
                    <p class="text-left flex-grow-1">Spersonalizowany trening dopasowany do Twoich potrzeb i celów fitnessowych.</p>
                    <a href="@Url.Action("Szczegoly2", "Home")" class="btn btn-lavender mt-auto">Sprawdź szczegóły</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="d-flex flex-column align-items-center border p-3 h-100">
                <img src="~/informatyk.jpg" class="img-fluid" style="max-height: 150px; object-fit: contain;" alt="Dla pracujących przed komputerem">
                <div class="text-center mt-2 flex-grow-1 d-flex flex-column">
                    <h3 class="font-weight-bold">Dla pracujących przed komputerem</h3>
                    <p class="text-left flex-grow-1">Specjalne ćwiczenia i porady dla osób spędzających wiele czasu przed ekranem komputera.</p>
                    <a href="@Url.Action("Szczegoly3", "Home")" class="btn btn-lavender mt-auto">Sprawdź szczegóły</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="d-flex flex-column align-items-center border p-3 h-100">
                <img src="~/cwiczeniadom-k.jpg" class="img-fluid" style="max-height: 150px; object-fit: contain;" alt="Ćwiczenia w domu dla niej">
                <div class="text-center mt-2 flex-grow-1 d-flex flex-column">
                    <h3 class="font-weight-bold">Ćwiczenia w domu dla niej</h3>
                    <p class="text-left flex-grow-1">Efektywne ćwiczenia dostosowane specjalnie dla kobiet do wykonania w domowym zaciszu.</p>
                    <a href="@Url.Action("Szczegoly4", "Home")" class="btn btn-lavender mt-auto">Sprawdź szczegóły</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="d-flex flex-column align-items-center border p-3 h-100">
                <img src="~/cwiczeniadom-m.jpg" class="img-fluid" style="max-height: 150px; object-fit: contain;" alt="Ćwiczenia w domu dla niego">
                <div class="text-center mt-2 flex-grow-1 d-flex flex-column">
                    <h3 class="font-weight-bold">Ćwiczenia w domu dla niego</h3>
                    <p class="text-left flex-grow-1">Skuteczne plany treningowe dla mężczyzn do wykonania w komfortowym domowym środowisku.</p>
                    <a href="@Url.Action("Szczegoly5", "Home")" class="btn btn-lavender mt-auto">Sprawdź szczegóły</a>
                </div>
            </div>
        </div>
    </div>
</div>
